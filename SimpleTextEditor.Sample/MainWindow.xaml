<Window x:Class="SimpleTextEditor.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:core="clr-namespace:SimpleTextEditor;assembly=SimpleTextEditor"
        Title="Simple Text Editor">
    <Grid>
        <core:TextEditor x:Name="Editor" 
                         FontFamily="Consolas"
                         FontSize="14"
                         Padding="0"
                         Background="#0F0000FF"
                         Foreground="Black"
                         CaretBrush="Red"
                         TextHighlightBackground="DodgerBlue"
                         TextHighlightForeground="White"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         IsEnabled="True" />
    </Grid>
</Window>
